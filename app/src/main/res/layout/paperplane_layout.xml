<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/planebackground"
            android:scaleType="centerCrop"
            android:src="@drawable/planegame_background"/>

                <TextView
                    android:id="@+id/eventTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:background="@color/black"
                    android:layout_marginTop="50dp"
                    android:textColor="@color/white"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:visibility="visible" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="top|center"
            android:layout_marginTop="150dp"
            android:layout_below="@id/eventTextView"
            android:id="@+id/naturalDisasterLayout">
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center">

                <TextView
                    android:id="@+id/planeNumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="날릴 비행기의 개수를 정하시오"
                    android:textSize="28sp"
                    android:layout_marginTop="20dp" />

                <Spinner
                    android:id="@+id/numberOfPlanesSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:entries="@array/plane_numbers" />

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#0B1754"
                    android:text="NEXT"
                    android:layout_marginTop="20dp" />

                <TextView
                    android:id="@+id/peopleNumTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="벌칙받을 인원을 정하시오"
                    android:textSize="32sp"
                    android:visibility="gone" />

                <Spinner
                    android:id="@+id/numberOfPeopleSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    android:entries="@array/people_numbers" />

                <Button
                    android:id="@+id/startButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#0B1754"
                    android:visibility="gone"
                    android:text="GAME START"
                    android:layout_marginTop="20dp" />
        </LinearLayout>

        <androidx.gridlayout.widget.GridLayout
            android:id="@+id/planegridlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            android:visibility="gone">
        </androidx.gridlayout.widget.GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom|center">

                <!-- 결과 확인 버튼 -->
                <Button
                    android:id="@+id/resultButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#0B1754"
                    android:textSize="20dp"
                    android:text="RESULT"
                    android:onClick="onResultButtonClick"
                    android:visibility="gone"/>
                <!-- 메인 버튼 -->
                <Button
                    android:id="@+id/mainButton"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:backgroundTint="#0B1754"
                    android:textSize="20dp"
                    android:text="GO BACK"
                    android:onClick="onResultButtonClick"
                    android:visibility="gone"/>
        </LinearLayout>

</FrameLayout>